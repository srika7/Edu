<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- Set a background color -->
            <stroke
                android:width="1dp"
                android:color="@color/colorAccent" /> <!-- Set a border color -->
            <corners android:radius="8dp" /> <!-- Set corner radius -->
        </shape>
    </item>
</layer-list>
