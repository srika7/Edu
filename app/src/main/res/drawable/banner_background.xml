<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#4C6184" android:endColor="#727DFF" android:angle="0"/>
            <corners android:radius="18sp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#007bff" /> <!-- Blue color for pressed state -->
            <corners android:radius="18sp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#007bff" /> <!-- Blue color for focused state -->
            <corners android:radius="18sp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4C6184" /> <!-- Default color -->
            <corners android:radius="18sp"/>
        </shape>
    </item>
</selector>
